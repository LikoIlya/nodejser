html
    head
        title User
    body
        if(type="error")
            h3(style="color:red") #{message}
        else
            h3 New user, username: #{setup.username} and password: #{setup.password} added!
        form(action="/setup", method="POST")
            div
                label(for="username") Username: 
                input(name="username")
            br
            div
                label(for="password") Password: 
                input(name="password")
            br
            button(type="submit") Create new user